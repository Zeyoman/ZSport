<header class="bg-white">
  <nav class="mx-auto flex max-w-7xl items-center justify-between gap-x-6 p-6 lg:px-8" aria-label="Global">
    <!-- Logo -->
    <div class="flex lg:flex-1">
      <a href="{{ path('Homepage') }}" class="-m-1.5 p-1.5">
        <span class="sr-only">Zsport</span>
        <img class="h-8 w-auto" src="https://tailwindui.com/plus/img/logos/mark.svg?color=indigo&shade=600" alt="Your Company Logo">
      </a>
    </div>
    
    <!-- Navigation Links (Desktop) -->
    <div class="hidden lg:flex lg:gap-x-12">
      <a href="{{ path("app_video_index") }}" class="text-sm font-semibold text-gray-900">Vidéos</a>
      <a href="{{ path("app_programme_index") }}" class="text-sm font-semibold text-gray-900">Programme</a>
      <a href="{{ path("app_challenge_index") }}" class="text-sm font-semibold text-gray-900">Challenge</a>
      <a href="{{ path("app_favoris") }}" class="text-sm font-semibold text-gray-900">Favoris</a>
    </div>
    
    <!-- User Authentication Links -->
    <div class="flex flex-1 items-center justify-end gap-x-6">
      {% if app.user %}
        <span class="text-sm font-semibold text-gray-900">Bonjour {{ app.user.username }} !</span>
        <a href="{{ path('app_logout') }}" class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Déconnexion</a>
      {% else %}
        <a href="{{ path('app_login') }}" class="hidden text-sm font-semibold text-gray-900 lg:block">Se connecter</a>
        <a href="{{ path('app_register') }}" class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">S'inscrire</a>
      {% endif %}
    </div>
    
    <!-- Mobile Menu Button -->
    <div class="flex lg:hidden">
      <button type="button" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700" aria-label="Open main menu">
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
      </button>
    </div>
  </nav>
  
  <!-- Mobile Menu, Show/Hide Based on Menu Open State -->
  <div class="lg:hidden" role="dialog" aria-modal="true">
    <!-- Background Backdrop -->
    <div class="fixed inset-0 z-10 bg-black bg-opacity-25"></div>
    
    <!-- Slide-over Menu -->
    <div class="fixed inset-y-0 right-0 z-20 w-full max-w-sm overflow-y-auto bg-white px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10">
      <div class="flex items-center justify-between gap-x-6">
        <!-- Logo in Mobile Menu -->
        <a href="{{ path('Homepage') }}" class="-m-1.5 p-1.5">
          <span class="sr-only">Your Company</span>
          <img class="h-8 w-auto" src="https://tailwindui.com/plus/img/logos/mark.svg?color=indigo&shade=600" alt="Your Company Logo">
        </a>
        
        <!-- Sign Up Button in Mobile Menu -->
        <a href="{{ path('app_register') }}" class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Sign Up</a>
        
        <!-- Close Menu Button -->
        <button type="button" class="-m-2.5 rounded-md p-2.5 text-gray-700" aria-label="Close menu">
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      
      <!-- Navigation Links in Mobile Menu -->
      <div class="mt-6 flow-root">
        <div class="-my-6 divide-y divide-gray-500/10">
          <div class="space-y-2 py-6">
            <a href="{{ path("app_video_index") }}" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold text-gray-900 hover:bg-gray-50">Vidéos</a>
            <a href="{{ path("app_programme_index") }}" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold text-gray-900 hover:bg-gray-50">Programme</a>
            <a href="{{ path("app_challenge_index") }}" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold text-gray-900 hover:bg-gray-50">Challenge</a>
            <a href="{{ path("app_favoris") }}" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold text-gray-900 hover:bg-gray-50">Favoris</a>
          </div>
          <div class="py-6">
            {% if app.user %}
              <span class="block text-base font-semibold text-gray-900">Bonjour {{ app.user.username }} !</span>
              <a href="{{ path('app_logout') }}" class="mt-4 inline-block rounded-md bg-indigo-600 px-3 py-2 text-base font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Déconnexion</a>
            {% else %}
              <a href="{{ path('app_login') }}" class="-mx-3 block rounded-lg px-3 py-2.5 text-base font-semibold text-gray-900 hover:bg-gray-50">Se connecter</a>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</header>