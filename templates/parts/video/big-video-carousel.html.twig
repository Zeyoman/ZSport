<div class="carousel w-full">
  {% for video in topVideos %}
    <div id="slide{{ loop.index }}" class="carousel-item relative w-full h-[550px]">
      <!-- Image de la vidéo -->
      <img src="{{ video.image ? asset('uploads/image/' ~ video.image) : asset('images/defaut/defautImg.png') }}" class="w-full object-cover" alt="{{ video.title }}" />

      <!-- Overlay avec le titre, le level et le thème -->
        <div class="absolute inset-0 bg-black bg-opacity-60 flex flex-col items-center justify-center text-white p-4 gap-2">
            <a href="{{ path('app_video_show', {'id': video.id}) }}" class="absolute inset-0 z-0"></a>
            <h2 class="text-5xl font-bold">{{ video.title }}</h2>
            <p class="text-lg">
            {{ include('parts/conditions/videoTheme.html.twig') }}
            </p>
            <p class="text-lg">
            {{ include('parts/conditions/videoNote.html.twig') }}
            </p>
        </div>

      <!-- Boutons de navigation -->
      <div class="absolute flex justify-between transform -translate-y-1/2 left-5 right-5 top-1/2">
        <a href="#slide{{ loop.index == 1 ? loop.length : loop.index - 1 }}" class="btn btn-circle">❮</a>
        <a href="#slide{{ loop.index == loop.length ? 1 : loop.index + 1 }}" class="btn btn-circle">❯</a>
      </div>
    </div>
  {% endfor %}
</div>
